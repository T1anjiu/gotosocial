{{- with .Account }}
<address>
    <a
        rel="author"
        href="{{- .URL -}}"
        title="Open profile"
    >
        <img
            class="avatar"
            src="{{- .Avatar -}}"
            alt="Avatar for {{ .Username -}}"
            title="Avatar for {{ .Username -}}"
            loading="lazy"
        >
        <dl class="author-strap">
            <dt class="sr-only">Display name</dt>
            <dd class="displayname text-cutoff">
                {{- if .DisplayName -}}
                {{- emojify .Emojis (escape .DisplayName) -}}
                {{- else -}}
                {{- .Username -}}
                {{- end -}}
            </dd>
            <dt class="sr-only">Username</dt>
            <dd class="username text-cutoff">@{{- .Acct -}}</dd>
        </dl>
    </a>
</address>
{{- end }}