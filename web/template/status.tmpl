{{- define "statusContent" -}}
{{- with .Content }}
<div class="content" lang="{{- $.LanguageTag.TagStr -}}">
    {{ noescape . | emojify $.Emojis }}
</div>
{{- end }}
{{- end -}}

{{- with . }}
<header class="status-header">
    <h4 class="sr-only">Post by {{ .Account.Username -}}</h4>
    {{- include "status_author.tmpl" . | indent 1 | noescape }}
</header>
<section class="status-body">
    <h5 class="sr-only">Post body</h5>
    {{- if .SpoilerText }}
    <details class="text-spoiler">
        <summary>
            <span class="spoiler-text" lang="{{- .LanguageTag.TagStr -}}">{{- emojify .Emojis (escape .SpoilerText) -}}</span>
            <span class="button" role="button" tabindex="0">Toggle visibility</span>
        </summary>
        <div class="text">
            {{- with . }}
            {{- include "statusContent" . | indent 3 | noescape }}
            {{- end }}
            {{- if .Poll }}
            {{- include "status_poll.tmpl" . | indent 3 | noescape }}
            {{- end }}
        </div>
    </details>
    {{- else }}
    <div class="text">
        {{- with . }}
        {{- include "statusContent" . | indent 2 | noescape }}
        {{- end }}
        {{- if .Poll }}
        {{- include "status_poll.tmpl" . | indent 2 | noescape }}
        {{- end }}
    </div>
    {{- end }}
    {{- if .MediaAttachments }}
    {{- include "status_attachments.tmpl" . | indent 1 | noescape }}
    {{- end }}
</section>
<aside class="status-info">
    {{- include "status_info.tmpl" . | indent 1 | noescape }}
</aside>
<a
    class="status-link"
    data-nosnippet
    href="{{- .URL -}}"
    title="Open thread"
>
    Open thread
</a>
{{- end }}